# Task Service Dockerfile
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY backend/task-service/package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy source code
COPY backend/task-service/src ./src
COPY backend/shared ./shared

# Expose port
EXPOSE 3000

# Start the service
CMD ["node", "src/index.js"]