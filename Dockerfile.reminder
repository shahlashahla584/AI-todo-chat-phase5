# Reminder Service Dockerfile
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY backend/reminder-service/package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy source code
COPY backend/reminder-service/src ./src
COPY backend/reminder-service/scheduler ./scheduler
COPY backend/shared ./shared

# Expose port
EXPOSE 3001

# Start the service
CMD ["node", "src/index.js"]